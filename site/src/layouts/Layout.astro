---
import '../styles/global.css'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Joseph Kidushim Insurance Services</title>
	</head>
	<body class="flex flex-col min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
		<header class="shadow-lg">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex flex-row items-center justify-between h-auto sm:h-16 py-4 sm:py-0 gap-4">
					<div class="flex items-center gap-3">
						<img class="h-12 w-auto sm:h-16" src="logo.jpg" alt="logo" />
						<div class="text-2xl font-bold leading-tight text-center sm:text-left">
							Joseph A. Kidushim
							<span class="block sm:inline text-xl font-light ml-0 sm:ml-2">Insurance Services</span>
						</div>
					</div>
					<a href="#contact" class="ml-auto inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg px-5 py-2 transition-colors shadow focus:outline-none focus:ring-2 focus:ring-blue-400">Contact</a>
				</div>
			</div>
		</header>

		<!-- Page Content -->
		<main class="flex-grow">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="text-center p-6 mt-8">
			Â© {new Date().getFullYear()} Joseph A. Kidushim Insurance Services. All rights reserved.
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
