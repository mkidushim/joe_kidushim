---
import { Icon } from 'astro-icon/components';
---
<section id="contact" class="pt-6 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex flex-col md:flex-row gap-10 min-h-[400px]">
      <div class="flex-1 flex flex-col h-full">
        <div class="bg-gradient-to-br from-blue-50 via-white to-blue-100 border border-blue-200 rounded-xl shadow-lg p-6 md:p-8 flex flex-col items-center text-center h-full">
          <h3 class="text-2xl font-semibold text-blue-900 mb-4 flex items-center gap-2">
            <Icon name="mdi:chat" class="w-7 h-7 text-blue-700" /> Contact Us
          </h3>
          <form class="flex flex-col gap-5 w-full max-w-md mx-auto" name="contact" method="POST" data-netlify="true">
            <input type="hidden" name="form-name" value="contact" />
            <label class="flex flex-col gap-1 font-medium text-blue-900 text-left w-full">
              Name
              <input type="text" name="name" required class="border border-blue-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-blue-50 transition-shadow hover:shadow-md" />
            </label>
            <label class="flex flex-col gap-1 font-medium text-blue-900 text-left w-full">
              Email
              <input type="email" name="email" required class="border border-blue-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-blue-50 transition-shadow hover:shadow-md" />
            </label>
            <label class="flex flex-col gap-1 font-medium text-blue-900 text-left w-full">
              Message
              <textarea name="message" rows="4" required class="border border-blue-200 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400 bg-blue-50 transition-shadow hover:shadow-md"></textarea>
            </label>
            <button type="submit" class="mt-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg px-6 py-2 transition-colors shadow-md w-full">Send</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
