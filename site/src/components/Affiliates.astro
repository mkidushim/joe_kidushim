---
import { Icon } from 'astro-icon/components'
// No props needed for this static affiliates info
---
<section class="py-12 px-4">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Card 1: Companies -->
    <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col gap-4">
      <h2 class="text-2xl font-bold text-blue-900 mb-2 flex items-center gap-2">
        <Icon name="mdi:office-building" class="h-7 w-7 text-blue-600" aria-label="Affiliates" />
        Affiliates
      </h2>
      <ul class="space-y-3">
        <li>OneAmerica</li>
        <li>TransAmerica Corporation</li>
        <li>MassMutual Financial Group</li>
        <li>Lincoln Financial Group</li>
        <li>Midland National Life Insurance Company</li>
      </ul>
    </div>
    <!-- Card 2: Memberships -->
    <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col gap-4">
      <h2 class="text-2xl font-bold text-blue-900 mb-2 flex items-center gap-2">
        <Icon name="mdi:award" class="h-7 w-7 text-yellow-500" aria-label="Memberships & Recognition" />
        Memberships & Recognition
      </h2>
      <ul class="space-y-3">
        <li class="flex items-center gap-3">
          <span>Lifetime member of MDRT</span>
        </li>
        <li>Member of Transamerica council for input into fixed annuities and compensation</li>
      </ul>
    </div>
  </div>
</section>
