---
import { Icon } from 'astro-icon/components'
// No props needed for this static affiliates info
---
<section class="pt-6 px-4">
  <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="flex-1 flex flex-col gap-8 h-full">
      <div class="bg-gradient-to-br from-blue-50 via-white to-blue-100 border border-blue-200 rounded-xl shadow-lg p-6 md:p-8 flex flex-col items-center text-center h-full">
        <div class="mb-4">
          <img
              loading="lazy"
              src="joe_kidushim.jpg" alt="Joseph A. Kidushim" class="w-16 h-16 rounded-full object-cover border-2 border-blue-700" />
        </div>
        <h3 class="text-2xl font-bold text-blue-900 mb-2">Joseph A. Kidushim</h3>
        <div class="text-blue-700 font-medium mb-4">Insurance & Retirement Solutions</div>
        <ul class="space-y-3 text-blue-900">
          <li>
            <span class="font-semibold">Address:</span><br />
            80 SOUTH LAKE AVE SUITE 515<br />
            PASADENA, CA 91101
          </li>
          <li>
            <span class="font-semibold">Office Phone:</span> 800.262.9492 / 949.222.2299
          </li>
          <li>
            <span class="font-semibold">Fax:</span> 949.261.9868
          </li>
          <li>
            <span class="font-semibold">Email:</span><br />
            <a href="mailto:JOE@KIDUSHIM.COM" class="text-blue-600 underline break-all">joe@kidushim.com</a>
          </li>
          <li>
            <span class="font-semibold">CA License:</span> 0657834<br />
            <span class="font-semibold">CT License:</span> 663502
          </li>
        </ul>
      </div>
    </div>
    <div class="bg-gradient-to-br from-blue-50 via-white to-blue-100 border border-blue-200 rounded-xl shadow-lg p-6 flex flex-col gap-4 items-center text-center">
      <h2 class="text-2xl font-bold text-blue-900 mb-2 flex items-center gap-2">
        Affiliates
      </h2>
      <ul class="space-y-3">
        <!-- OneAmerica: square logo -->
        <li class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full overflow-hidden border border-blue-200 flex items-center justify-center shadow">
            <img src="oneamerica.png" alt="OneAmerica" class="object-cover" />
          </div>
          OneAmerica
        </li>
        <!-- TransAmerica: wide logo with text -->
        <li class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full overflow-hidden border border-blue-200 flex items-center justify-center shadow bg-white">
            <img src="transamerica.jpeg" alt="TransAmerica Corporation" class="object-cover" />
          </div>
          TransAmerica Corporation
        </li>
        <!-- MassMutual: wide logo with text -->
        <li class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full overflow-hidden border border-blue-200 flex items-center justify-center shadow bg-white">
            <img src="massmutual.jpeg" alt="MassMutual Financial Group" class="object-cover" />
          </div>
          MassMutual Financial Group
        </li>
        <!-- Lincoln: wide logo with text -->
        <li class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full overflow-hidden border border-blue-200 flex items-center justify-center shadow bg-white">
            <img src="lincoln.jpeg" alt="Lincoln Financial Group" class="object-cover" />
          </div>
          Lincoln Financial Group
        </li>
        <!-- Midland: square logo -->
        <li class="flex items-center gap-3">
          <div class="w-16 h-16 rounded-full overflow-hidden border border-blue-200 flex items-center justify-center shadow bg-white">
            <img src="midland.png" alt="Midland National Life Insurance Company" class="object-cover" />
          </div>
          Midland National Life Insurance Company
        </li>
      </ul>
    </div>

  </div>
</section>
